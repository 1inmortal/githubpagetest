import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.*;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.FontWeight;
import javafx.stage.Stage;

import java.security.MessageDigest;
import java.nio.charset.StandardCharsets;
import java.util.HashMap;

public class LoginSystemStyledFX extends Application {

    private static final HashMap<String, String> users = new HashMap<>();

    private static String hashPassword(String password) {
        try {
            MessageDigest digest = MessageDigest.getInstance("SHA-256");
            byte[] hashBytes = digest.digest(password.getBytes(StandardCharsets.UTF_8));
            StringBuilder hexString = new StringBuilder();
            for (byte b : hashBytes) {
                hexString.append(String.format("%02x", b));
            }
            return hexString.toString();
        } catch (Exception e) {
            e.printStackTrace();
            return null;
        }
    }

    @Override
    public void start(Stage primaryStage) {
        // Pre-cargar usuarios
        users.put("admin", hashPassword("admin"));
        users.put("moderador", hashPassword("mod123"));
        users.put("usuario", hashPassword("user123"));

        // Crear la ventana principal
        primaryStage.setTitle("Sistema de Login");

        // Crear componentes
        Label titleLabel = new Label("Bienvenido");
        titleLabel.setFont(Font.font("Arial", FontWeight.BOLD, 24));
        titleLabel.setTextFill(Color.WHITE);

        TextField userField = new TextField();
        userField.setPromptText("Usuario");
        styleTextField(userField);

        PasswordField passField = new PasswordField();
        passField.setPromptText("Contraseña");
        styleTextField(passField);

        Label messageLabel = new Label();
        messageLabel.setTextFill(Color.RED);

        Button loginButton = new Button("Iniciar sesión");
        styleButton(loginButton);

        Button cancelButton = new Button("Cancelar");
        styleButton(cancelButton);

        // Layouts
        VBox mainLayout = new VBox(10);
        mainLayout.setAlignment(Pos.CENTER);
        mainLayout.setPadding(new Insets(20));
        mainLayout.setStyle("-fx-background-color: #323232;");

        GridPane inputGrid = new GridPane();
        inputGrid.setHgap(10);
        inputGrid.setVgap(10);
        inputGrid.setAlignment(Pos.CENTER);
        inputGrid.add(new Label("Usuario:"), 0, 0);
        inputGrid.add(userField, 1, 0);
        inputGrid.add(new Label("Contraseña:"), 0, 1);
        inputGrid.add(passField, 1, 1);

        HBox buttonLayout = new HBox(10);
        buttonLayout.setAlignment(Pos.CENTER);
        buttonLayout.getChildren().addAll(loginButton, cancelButton);

        mainLayout.getChildren().addAll(titleLabel, inputGrid, buttonLayout, messageLabel);

        // Acción del botón de login
        loginButton.setOnAction(e -> {
            String username = userField.getText().trim();
            String password = passField.getText().trim();

            if (username.isEmpty() || password.isEmpty()) {
                messageLabel.setText("Por favor complete todos los campos.");
            } else if (users.containsKey(username) && users.get(username).equals(hashPassword(password))) {
                primaryStage.close();
                showUserPanel(username);
            } else {
                messageLabel.setText("Usuario o contraseña incorrectos.");
                passField.clear();
            }
        });

        // Acción del botón cancelar
        cancelButton.setOnAction(e -> primaryStage.close());

        // Configurar la escena
        Scene scene = new Scene(mainLayout, 400, 300);
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    private void showUserPanel(String username) {
        Stage userStage = new Stage();
        userStage.setTitle("Panel de Usuario");

        Label welcomeLabel = new Label("¡Bienvenido, " + username + "!");
        welcomeLabel.setFont(Font.font("Arial", FontWeight.BOLD, 20));
        welcomeLabel.setTextFill(Color.WHITE);

        Button logoutButton = new Button("Cerrar sesión");
        styleButton(logoutButton);

        VBox layout = new VBox(20);
        layout.setAlignment(Pos.CENTER);
        layout.setPadding(new Insets(20));
        layout.setStyle("-fx-background-color: #323232;");
        layout.getChildren().addAll(welcomeLabel, logoutButton);

        logoutButton.setOnAction(e -> {
            userStage.close();
            start(new Stage());
        });

        Scene scene = new Scene(layout, 400, 200);
        userStage.setScene(scene);
        userStage.show();
    }

    private void styleTextField(TextField textField) {
        textField.setFont(Font.font("Arial", FontWeight.NORMAL, 14));
        textField.setStyle("-fx-background-color: #464646; -fx-text-fill: white; -fx-prompt-text-fill: gray;");
    }

    private void styleButton(Button button) {
        button.setFont(Font.font("Arial", FontWeight.BOLD, 14));
        button.setStyle("-fx-background-color: #6495ED; -fx-text-fill: white;");
        button.setPadding(new Insets(5, 15, 5, 15));
    }

    public static void main(String[] args) {
        launch(args);
    }
}
