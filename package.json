{
  "name": "githubpagetest",
  "version": "3.0.0",
  "description": "Portafolio profesional de desarrollo full-stack con experiencia en AWS, Azure, React, Python y tecnologías cloud",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:api",
    "dev:frontend": "python -m http.server 3000",
    "dev:api": "cd server && npm run dev",
    "build": "echo 'Frontend estático, no requiere build'",
    "test": "npm run test:unit && npm run test:api && npm run test:e2e",
    "test:unit": "vitest run",
    "test:api": "vitest run tests/api.test.js",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "security:audit": "npm audit && npm audit fix",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "db:studio": "cd server && npm run db:studio",
    "start:api": "cd server && npm start",
    "docker:up": "docker-compose -f config/compose.dev.yml up -d",
    "docker:down": "docker-compose -f config/compose.dev.yml down",
    "docker:logs": "docker-compose -f config/compose.dev.yml logs -f",
    "deps:resolve": "node scripts/resolve-deps.js",
    "deps:update": "npm update && npm audit fix",
    "deps:check": "npm outdated && npm audit --omit=dev",
    "email:generate": "python scripts/generate-commit-email.py",
    "email:send": "python scripts/send-commit-email.py",
    "email:setup": "chmod +x .git/hooks/post-commit",
    "email:config": "echo 'Configura GMAIL_APP_PASSWORD en variables de entorno'"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "server/*",
    "src/components/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "portfolio",
    "full-stack",
    "react",
    "python",
    "aws",
    "azure",
    "devops",
    "web-development"
  ],
  "author": "INMORTAL_OS",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/1inmortal/githubpagetest.git"
  },
  "homepage": "https://1inmortal.github.io/githubpagetest/",
  "bugs": {
    "url": "https://github.com/1inmortal/githubpagetest/issues"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0"
  }
}
