{
  "name": "githubpagetest",
  "version": "3.0.0",
  "description": "Portafolio profesional de desarrollo full-stack con experiencia en AWS, Azure, React, Python y tecnologÃ­as cloud",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "dev:api": "cd server && npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:api",
    "test:unit": "vitest run --config=tests/vitest.config.js",
    "test:api": "vitest run --config=tests/vitest.config.js tests/api.test.js",
    "test:e2e": "playwright test --config=tests/playwright.config.js",
    "test:all": "npm run test:unit && npm run test:api && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/",
    "security:audit": "npm audit && npm audit fix",
    "audit:dependencies": "node scripts/audit-dependencies.js",
    "pin:versions": "node scripts/pin-secure-versions.js",
    "start:api": "cd server && npm start"
  },
  "dependencies": {
    "@google/genai": "^1.14.0",
    "dompurify": "^3.0.8",
    "lit": "^3.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "portfolio",
    "full-stack",
    "react",
    "python",
    "aws",
    "azure",
    "devops",
    "web-development"
  ],
  "author": "INMORTAL_OS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1inmortal/githubpagetest.git"
  },
  "homepage": "https://1inmortal.github.io/githubpagetest/",
  "bugs": {
    "url": "https://github.com/1inmortal/githubpagetest/issues"
  }
}
