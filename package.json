  "repository": {
    "type": "git",
    "url": "https://github.com/1inmortal/githubpagetest.git"
  },
  "homepage": "https://1inmortal.github.io/githubpagetest/",
  "bugs": {
    "url": "https://github.com/1inmortal/githubpagetest/issues"
  }
}
